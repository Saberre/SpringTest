<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="re.saber.springtest2.mapper.BoardMapper">

	<select id="getArticleList" resultType="re.saber.springtest2.models.Article">
		SELECT `id`, `author`, `subject`, `created` FROM `articles` ORDER BY `created` DESC LIMIT #{offset}, #{count}
	</select>
	
	<select id="getArticle" resultType="re.saber.springtest2.models.Article">
		SELECT * FROM `articles` WHERE id = #{id}
	</select>
	
	<insert id="insertArticle" parameterType="re.saber.springtest2.models.Article" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO `articles` (`author`, `subject`, `content`, `created`) VALUES (#{author}, #{subject}, #{content}, NOW());
	</insert>
	
	<update id="updateArticle" parameterType="re.saber.springtest2.models.Article">
		UPDATE `articles` SET `subject` = #{subject}, `content` = #{content} WHERE `id` = #{id}
	</update>
	
	<delete id="deleteArticle">
		DELETE FROM `articles` WHERE `id` = #{id}
	</delete>
	
	
